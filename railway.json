{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "providers": [],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "yt-dlp", "ffmpeg", "deno", "python311"]
        },
        "install": {
          "cmds": [
            "cd server && npm install",
            "pip3 install --break-system-packages bgutil-ytdlp-pot-provider"
          ]
        },
        "build": {
          "cmds": ["echo 'No build needed - pure Node.js server'"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd server && yt-dlp --version && node index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
